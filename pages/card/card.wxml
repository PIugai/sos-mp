<!--pages/card/card.wxml-->


<view>capacity: {{post.capacity}}</view>
<view>location: {{post.location}}</view>
<view>description: {{post.description}}</view>
<view>date: {{post.date}}</view>
<view wx:for="{{post.comments}}" wx:for-item="comment">
  <view>comment: {{comment.comment}}</view>
  <view>date: {{comment.date}}</view>
</view>

<form bindsubmit="formSubmit" bindreset="formReset">
  <input name="comment" placeholder="please input comment" />
  <button formType="submit">Submit</button>
</form>
