  width:56px;
  height:56px;
  margin:47px 0 0 19px;
  position:absolute;
  margin-top:9%;
  margin-left:44%;
}

.card {
 display: flex;
  flex-direction: column;
  height: 63vh;
  width: 90%;
  margin: 13px auto;
  background-size: cover !important;
  background-position: center;
  color: black;
  border-radius: 14px;
  box-shadow: 1px 1px 1px 1px rgba(0, 0, 0, 0.3);
  background-color: #dfdfdf;
  text-align: center;
  padding: 5px;
}

